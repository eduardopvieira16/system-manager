package br.com.vieira.srv.manager.controller;

import br.com.vieira.srv.manager.dto.StockMovementsDTO;
import br.com.vieira.srv.manager.service.StockMovementsService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@CrossOrigin(origins = "http://localhost:9091")
@RestController
@RequestMapping("/api/stock-movements")
public class InventoryController {

    @Autowired
    private StockMovementsService stockMovementsService;

    @GetMapping
    public List<StockMovementsDTO> listInventories() {
        return stockMovementsService.findAll();
    }

    @GetMapping("/{id}")
    public StockMovementsDTO getInventory(@PathVariable Long id) {
        return stockMovementsService.findById(id);
    }

    @PostMapping
    public StockMovementsDTO createInventory(@RequestBody StockMovementsDTO stockMovementsDTO) {
        return stockMovementsService.createInventory(stockMovementsDTO);
    }
}